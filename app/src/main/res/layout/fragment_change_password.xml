<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Inner_Fragments.ChangePassword">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:background="@color/app_colour">

                    <ImageView
                        android:id="@+id/change_password_back"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:adjustViewBounds="true"
                        android:layout_marginEnd="14dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/back" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reset_password"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/oswald" />

                </androidx.appcompat.widget.Toolbar>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reset_password"
                            android:textColor="@color/app_colour"
                            android:textSize="22sp"
                            android:fontFamily="@font/oswald" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textSize="11sp"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/app_colour"
                            android:paddingStart="12dp"
                            android:text="@string/current_password"/>

                        <EditText
                            android:id="@+id/current_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/forgat_password"
                            android:drawablePadding="4dp"
                            android:paddingStart="14dp"
                            android:paddingBottom="14dp"
                            android:paddingEnd="14dp"
                            android:inputType="textPassword"
                            android:hint="@string/current_password"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textSize="11sp"
                            android:textColor="@color/app_colour"
                            android:paddingStart="12dp"
                            android:layout_marginTop="6dp"
                            android:text="@string/new_password"/>

                        <EditText
                            android:id="@+id/new_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/forgat_password"
                            android:drawablePadding="4dp"
                            android:paddingStart="14dp"
                            android:paddingBottom="14dp"
                            android:paddingEnd="14dp"
                            android:inputType="textPassword"
                            android:hint="@string/new_password"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textSize="11sp"
                            android:textColor="@color/app_colour"
                            android:paddingStart="12dp"
                            android:layout_marginTop="6dp"
                            android:text="@string/conform_new_password"/>

                        <EditText
                            android:id="@+id/conformPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/forgat_password"
                            android:drawablePadding="4dp"
                            android:paddingStart="14dp"
                            android:paddingBottom="14dp"
                            android:paddingEnd="14dp"
                            android:inputType="textPassword"
                            android:hint="@string/conform_new_password"/>


                        <LinearLayout
                            android:id="@+id/Change_password_submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:padding="15dp"
                            android:gravity="center"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/button_background"
                            android:orientation="horizontal"
                            android:focusable="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="18sp"
                                android:fontFamily="@font/oswald"
                                android:textColor="@color/white"
                                android:text="Submit" />

                        </LinearLayout>

                    </LinearLayout>

            </LinearLayout>

</FrameLayout>